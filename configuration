ROOT=$(shell pwd)/../

BUILD=build

CPU=arm926ej-s

BOARD=qemu
PLATFORM=arm

## toolchain bin path, you may download from here
## https://developer.arm.com/tools-and-software/open-source-software/developer-tools/gnu-toolchain/gnu-rm/downloads
TOOLCHAIN=$(ROOT)/$(BUILD)/tmp/gcc-arm-none-eabi-10-2020-q4-major/bin

## headers path
TOOLCHAIN_HEADER=$(ROOT)/$(BUILD)/tmp/gcc-arm-none-eabi-10-2020-q4-major/arm-none-eabi/include


## target platform
TARGET=$(BOARD)/$(CPU)

## toolchain declare
CC=$(TOOLCHAIN)/$(PLATFORM)-none-eabi-gcc
AS=$(TOOLCHAIN)/$(PLATFORM)-none-eabi-as
LD=$(TOOLCHAIN)/$(PLATFORM)-none-eabi-ld
OC=$(TOOLCHAIN)/$(PLATFORM)-none-eabi-objcopy
LDIR=$(TOOLCHAIN)/$(PLATFORM)-none-eabi/lib
LDIR2=$(TOOLCHAIN)/$(PLATFORM)-none-eabi/6.3.1

## output dir
OUT_DIR=$(ROOT)/$(BUILD)/out/$(TARGET)

# Makefile main logic
OUT_BIN=output

C_CFLAGS += -I$(TOOLCHAIN_HEADER)
C_CFLAGS += -I$(ROOT)/source/arch/$(PLATFORM)/$(BOARD)/include
C_CFLAGS += -I./ -Os

AFLAGS=-mcpu=$(CPU)
CFLAGS=-mcpu=$(CPU)  \
       -nostdlib -g \
       $(C_CFLAGS)

LDFLAGS = -L$(LDIR) \
          -L$(LDIR2) \
	  -lc -lgcc -lm 

DEFS = -DCONFIG_ABTASK=0

## link entry object
$(shell ln -s $(OUT_DIR)/arch/$(PLATFORM)/$(BOARD)/startup.o $(ROOT)/build/out/startup.o) 
